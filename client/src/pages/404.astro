---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import Link from "@components/Link.astro";

---

<PageLayout title="404 - Page Not Found" description="Oops! The page you're looking for doesn't exist.">
  <Container>
    <div class="flex flex-col items-center justify-center min-h-[60vh] space-y-8 text-center">
      <div class="animate">
        <h1 class="text-6xl text-black dark:text-white mb-4">404</h1>
        <h2 class="text-2xl text-black dark:text-white mb-2">Page Not Found</h2>
        <p class="text-lg opacity-75 mb-8">
          Oops! The page you're looking for seems to have wandered off into the void.
        </p>
      </div>
      
      <div class="animate">
        <img 
          src="https://media1.tenor.com/m/N7ELde-GxqgAAAAd/one-piece-chopper.gif" 
          alt="Confused Tony Tony Chopper"
          class="rounded-lg shadows-md max-w-sm w-full h-auto"
          loading="lazy"
        />
      </div>
      
      <div class="animate">
        <Link href="/" aria-label="Homepage">Go home.</Link>
      </div>
    </div>
  </Container>
</PageLayout>